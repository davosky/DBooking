<div class='panel panel-primary'>
  <div class='panel-heading'>
    <%= inline_svg_tag('navbar_logo.svg', size: '192px * 48px', preserve_aspect_ratio: 'xMaxYMax meet') %>
  </div>
  <div class='panel-body'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <div class='field'>
      <%= form.label :email %><br />
      <%= form.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>

    <div class='field'>
      <%= form.label :password %><br />
      <%= form.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
    </div>
    <br />
    <div class='form-group'>
      <%= button_tag(type: 'submit', class: 'btn btn-primary btn-sm btn-block') do %>
      <strong>
        <i class='fas fa-sign-in-alt'>&nbsp;</i><%= t('.sign_in') %>
      </strong>
      <% end %>
    </div>
    <% end %>
  </div>
</div>